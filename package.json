{
  "name": "open-xml-vscode-ext",
  "displayName": "open-xml-vscode-ext",
  "description": "VS Code extension for navigating Open XML files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:open-xml-vscode-ext.open-in-workspace",
    "onFileSystem:oxml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "open-xml-vscode-ext.open-in-workspace",
        "title": "Open document in workspace"
      },
      {
        "command": "open-xml-vscode-ext.scratchpad",
        "title": "Scratchpad for testing..."
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "open-xml-vscode-ext.open-in-workspace",
          "group": "navigation",
          "when": "resourceExtname == .pptx"
        }
      ]
    },
    "contributes": {
      "resourceLabelFormatters": [
        {
          "scheme": "oxml",
          "formatting": {
            "label": "${path}",
            "separator": "/"
          }
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.47.0",
    "@types/yauzl-promise": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "yauzl-promise": "^2.1.3"
  }
}
